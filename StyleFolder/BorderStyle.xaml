<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="BackgroundBorder" TargetType="Border">
        <Setter Property="Background" Value="#19191a"/>
        <Setter Property="BorderBrush" Value="#141414"/>
        <Setter Property="BorderThickness" Value="1 0 1 1"/>
    </Style>
    <Style x:Key="ShadowBorder" TargetType="Border">
        <Setter Property="Background" Value="#19191a"/>
        <Setter Property="BorderBrush" Value="#19191a"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="8"/>
    </Style>
</ResourceDictionary>