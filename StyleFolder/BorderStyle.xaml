<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="BackgroundBorder" TargetType="Border">
        <Setter Property="Background" Value="#141414"/>
        <Setter Property="BorderBrush" Value="#141414"/>
        <Setter Property="BorderThickness" Value="1 0 1 1"/>
    </Style>
    <Style x:Key="ShadowBorder" TargetType="Border">
        <Setter Property="Background" Value="#19191a"/>
        <Setter Property="BorderBrush" Value="#19191a"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="8"/>
    </Style>
    <Style x:Key="MaskBorder" TargetType="Border">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Height" Value="250"/>
        <Setter Property="Width" Value="250"/>
        <Setter Property="CornerRadius" Value="125"/>
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="BorderBrush" Value="#232324"/>
        <Setter Property="BorderThickness" Value="125"/>
    </Style>
</ResourceDictionary>